<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityAvanzada.SeleccionarUbicacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapaIndicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Indicaciones:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtInstruccionesDeUbicacion"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:ems="10"
                android:hint="Detras del porton rojo, hay una estatua"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnEnviarUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar ubicacion" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>